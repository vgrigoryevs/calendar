<Alloy>
	<Collection src="note" />
	<Window class="container" id="editorWin">
		<View id="dateEditorMenu">
			<Label id="saveBtn" text="Сохранить" onClick="saveBtnTap" color="white"></Label>
		</View>		
				
		<View dataFilter="filterFunction" 
				   dataCollection="note" 
				   dataTransform="transformFunction"
				   id="tabView" 
				   top="20"
				   layout="vertical"
				   >
			
			<View height="18">
				<Label class="anno" text="Что"></Label>
				<TextField value="{title}" height="18" maxLength="100" hintText="Название мероприятия" id="titleField" onChange="titleChange"></TextField>
			</View>
			
			<View height="18" top="40">
				<Label class="anno" text="Где"></Label>
				<TextField value="{place}"  maxLength="100" hintText="Место" id="placeField" onChange="placeChange"></TextField>
			</View>
			
			<View height="18" top="40">
				<Label class="anno" text="С"></Label>
				<View class="pickerContainer">
					<Label onClick="fromDateClick" left="20" text="{parent}" color="black" ></Label>
					<Label onClick="fromTimeClick" right="20" text="{customHoursFrom}" color="black"></Label>
				</View>		
			</View>
			
			<View height="18" top="40">
				<Label class="anno" text="До"></Label>
				<View class="pickerContainer">
					<Label onClick="tillDateClick" left="20" text="{parent}" color="black"></Label>
					<Label onClick="tillTimeClick" right="20" text="{customHoursTill}" color="black"></Label>
				</View>       		
			</View>
			
			<View height="18" top="40">
				<Label class="anno" text="Гости"></Label>
				<TextField value="{guests}"  hintText="Гости" id="guestsField" onChange="guestsChange"></TextField>
			</View>
			
			<View height="18" top="40">
				<Label class="anno" text="Описание"></Label>
				<TextField value="{description}" hintText="Описание" id="descriptionField" onChange="descriptionChange"></TextField>
			</View>
			
			<View height="18" top="40">
				<Label class="anno" text="Цвет"></Label>
				<Label onClick="colorClick" right="10" width="67%" borderColor="black" id="colorLabel" backgroundColor="{color}"></Label>
			</View>
			
		</View>	
	</Window>
</Alloy>