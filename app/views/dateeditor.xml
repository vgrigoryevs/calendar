<Alloy>
	<Collection src="note" />
	<Window class="container">
		<View id="dateEditorMenu">
			<Label id="saveBtn" text="Сохранить" onClick="saveBtnTap"></Label>
		</View>		
				
		<TableView dataFilter="filterFunction" dataCollection="note" id="tabView" top="20">
			
			<TableViewRow>
				<Label text="Что"></Label>
				<TextField value="{title}" maxLength="100" hintText="Название мероприятия" id="titleField" onChange="titleChange"></TextField>
			</TableViewRow>
			
			<TableViewRow>
				<Label text="Где"></Label>
				<TextField value="{place}" maxLength="100" hintText="Место" id="placeField" onChange="placeChange"></TextField>
			</TableViewRow>
			
			<TableViewRow>
				<Label text="С"></Label>
				<View class="pickerContainer">
			    </View>   		
			</TableViewRow>
			
			<TableViewRow>
				<Label text="До"></Label>
				<View class="pickerContainer">
				</View>        		
			</TableViewRow>
			
			<TableViewRow>
				<Label text="Гости"></Label>
				<TextField value="{guests}" hintText="Гости" id="guestsField" onChange="guestsChange"></TextField>
			</TableViewRow>
			
			<TableViewRow>
				<Label text="Описание"></Label>
				<TextField value="{description}" hintText="Описание" id="descriptionField" onChange="descriptionChange"></TextField>
			</TableViewRow>
			
			<TableViewRow>
				<Label text="Цвет"></Label>
			</TableViewRow>
			
		</TableView>	
	</Window>
</Alloy>