<Alloy>
	<Collection src="note" />
	<Window class="container" id="editorWin">
		<RightNavButtons platform="ios">
			<Button systemButton="Ti.UI.iPhone.SystemButton.SAVE" onClick="saveBtnTap" />
        	<Button systemButton="Ti.UI.iPhone.SystemButton.TRASH" onClick="removeBtnTap" />
        </RightNavButtons>
		
		<View id="dateEditorMenu" platform="android">
			<Label text="Заметка" left="10" color="white" />
			<ImageView id="saveBtn" image="/img/save.png" onClick="saveBtnTap" right="10" />
			<ImageView id="removeBtn" image="/img/delete.png" onClick="removeBtnTap" color="white" right="80" />
		</View>		
				
		<ScrollView dataFilter="filterFunction" 
				   dataCollection="note" 
				   dataTransform="transformFunction"
				   id="tabView" 
				   top="80"
				   layout="vertical"
				   >
			
			<View height="50">
				<Label class="anno" text="Что"></Label>
				<TextField value="{title}" maxLength="100" hintText="Название мероприятия" id="titleField" onChange="titleChange"></TextField>
			</View>
			
			<View class="viewRow">
				<Label class="anno" text="Где"></Label>
				<TextField value="{place}"  maxLength="100" hintText="Место" id="placeField" onChange="placeChange"></TextField>
			</View>
			
			<View class="viewRow">
				<Label class="anno" text="С"></Label>
				<View class="pickerContainer">
					<Label onClick="fromDateClick" left="20" text="{parent}" color="black" backgroundImage = "/img/picker.png"></Label>
					<Label onClick="fromTimeClick" right="20" text="{customHoursFrom}" color="black" backgroundImage = "/img/picker.png"></Label>
				</View>		
			</View>
			
			<View class="viewRow">
				<Label class="anno" text="До"></Label>
				<View class="pickerContainer">
					<Label onClick="tillDateClick" left="20" text="{parent}" color="black" backgroundImage = "/img/picker.png"></Label>
					<Label onClick="tillTimeClick" right="20" text="{customHoursTill}" color="black" backgroundImage = "/img/picker.png"></Label>
				</View>
      		
			</View>
			
			<View class="viewRow">
				<Label class="anno" text="Гости"></Label>
				<TextArea value="{guests}"  hintText="Гости" id="guestsField" onChange="guestsChange"></TextArea>
			</View>
			
			<View class="viewRow">
				<Label class="anno" text="Описание"></Label>
				<TextArea value="{description}" hintText="Описание" id="descriptionField" onChange="descriptionChange"></TextArea>
			</View>
			
			<View class="viewRow">
				<Label class="anno" text="Цвет"></Label>
				<Label onClick="colorClick" right="10" width="67%" borderColor="black" id="colorLabel" backgroundColor="{color}"></Label>

			</View>
			
		</ScrollView>	
	</Window>
</Alloy>