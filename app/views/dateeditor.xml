<Alloy>
	<Collection src="note" />
	<Window class="container" id="editorWin">
		<View id="dateEditorMenu">
			<Label id="saveBtn" text="Сохранить" onClick="saveBtnTap" color="white"></Label>
		</View>		
				
		<TableView dataFilter="filterFunction" dataCollection="note" id="tabView" top="20">
			
			<TableViewRow>
				<Label class="anno" text="Что"></Label>
				<TextField value="{title}" maxLength="100" hintText="Название мероприятия" id="titleField" onChange="titleChange"></TextField>
			</TableViewRow>
			
			<TableViewRow>
				<Label class="anno" text="Где"></Label>
				<TextField value="{place}" maxLength="100" hintText="Место" id="placeField" onChange="placeChange"></TextField>
			</TableViewRow>
			
			<TableViewRow>
				<Label class="anno" text="С"></Label>
				<Label onClick="fromClick" right="10" width="67%" title="{parent}"></Label>		
			</TableViewRow>
			
			<TableViewRow>
				<Label class="anno" text="До"></Label>
				<View class="pickerContainer">
				</View>        		
			</TableViewRow>
			
			<TableViewRow>
				<Label class="anno" text="Гости"></Label>
				<TextField value="{guests}" hintText="Гости" id="guestsField" onChange="guestsChange"></TextField>
			</TableViewRow>
			
			<TableViewRow>
				<Label class="anno" text="Описание"></Label>
				<TextField value="{description}" hintText="Описание" id="descriptionField" onChange="descriptionChange"></TextField>
			</TableViewRow>
			
			<TableViewRow id="colorPicker">
				<Label class="anno" text="Цвет"></Label>
				<Label onClick="colorClick" right="10" width="67%" backgroundColor="{color}" borderColor="black" id="colorLabel"></Label>
			</TableViewRow>
			
		</TableView>	
	</Window>
</Alloy>